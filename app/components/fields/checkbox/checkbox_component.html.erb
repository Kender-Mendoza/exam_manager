<div class="flex mb-4">
  <div class="flex items-center h-5">
    <%= check_box model, field, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500
                                        dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800
                                        focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
  </div>

  <div class="ms-2 text-sm">
    <%= label model, field, class: "font-medium text-gray-900 dark:text-gray-300" %>
    <p id="helper-checkbox-text" class="text-xs font-normal text-gray-500 dark:text-gray-400"> <%= note %></p>
  </div>
</div>
