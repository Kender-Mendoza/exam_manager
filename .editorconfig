# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with explicit extensions
[*.{rb,erb,scss,css,html,yml}]
charset = utf-8
indent_style = space
indent_size = 2

# Matches the .editorconfig file itself
[.editorconfig]
indent_style = space
indent_size = 2
